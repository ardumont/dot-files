# Load aliases
[ -f ~/.shrc-aliases ] && . ~/.shrc-aliases

# Load path
[ -f ~/.shrc-path ] && . ~/.shrc-path

# Load env variable
[ -f ~/.shrc-env ] && . ~/.shrc-env

# Load specific work shrc
[ -f ~/work/.shrc ] && . ~/work/.shrc

# keyboard mapping
[ ! -f /etc/NIXOS -a -f ~/bin/kbd/remap-keyboard.sh ] && . ~/bin/kbd/remap-keyboard.sh

# Disable touchpad when typing
[ -f ~/bin/touchpad/disable-touchpad-when-typing.sh ] && . ~/bin/touchpad/disable-touchpad-when-typing.sh
# nix env (manual install)
[ -f ~/.nix-profile/etc/profile.d/nix.sh ] && . ~/.nix-profile/etc/profile.d/nix.sh

# autojump
[ -f $HOME/.nix-profile/etc/profile.d/autojump.zsh ] && . $HOME/.nix-profile/etc/profile.d/autojump.zsh

fortune | cowsay
