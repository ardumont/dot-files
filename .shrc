# Load aliases
[ -f ~/.shrc-aliases ] && . ~/.shrc-aliases

# Load path
[ -f ~/.shrc-path ] && . ~/.shrc-path

# Load env variable
[ -f ~/.shrc-env ] && . ~/.shrc-env

# Load specific work shrc
[ -f ~/.shrc-work ] && . ~/.shrc-work

# keyboard mapping
[ ! -f /etc/NIXOS -a -f ~/bin/kbd/remap-keyboard.sh ] && . ~/bin/kbd/remap-keyboard.sh

# Setup the touchpad's behavior
[ -f ~/bin/touchpad/setup-touchpad.sh ] && . ~/bin/touchpad/setup-touchpad.sh

# Disable touchpad when typing
[ -f ~/bin/touchpad/disable-touchpad-when-typing.sh ] && . ~/bin/touchpad/disable-touchpad-when-typing.sh

# autojump (sudo aptitude install autojump) your way in your filesystem
[ -f /usr/share/autojump/autojump.sh ] && . /usr/share/autojump/autojump.sh

# nix env
[ -f ~/.nix-profile/etc/profile.d/nix.sh ] && . ~/.nix-profile/etc/profile.d/nix.sh

fortune | cowsay
