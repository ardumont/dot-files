# adding personal folders to the initial PATH environment variables

###
# Personal shell scripts in $HOME/bin/
###

HOMEBIN=$HOME/bin/

[ -d $HOMEBIN ] && export PATH=$HOMEBIN:$PATH

for d in $(ls -l $HOMEBIN | grep '^d' | awk '{print $9}');
do
    FOLDER=${HOMEBIN}${d}
    [ -d $FOLDER ] && export PATH="$FOLDER:$PATH"
done

###
# Personal shell scripts in $HOME/bin/
###

FILES="/usr/local/heroku/bin $HOME/team/bin $HOME/work/bin $HOME/applications/wine $HOME/applications/bin /usr/lib/jvm/java-6-sun /usr/lib/jvm/java-6-oracle $HOME/applications/apache-maven-3.0.4 $HOME/.lein $HOME/.lein/bin $HOME/.lein/plugins /opt/vagrant/bin $HOME/applications/adt-bundle-linux-x85/sdk/platform-tools $HOME/applications/appengine/bin $HOME/.carton/bin/ $HOME/applications/play $HOME/applications/scala/bin"

for d in $FILES; do
    [ -d $d ] && export PATH="$d:$PATH"
done
