# -*- sh -*-

# for gpg-agent (need to be in .bashrc/.zshrc according to man gpg-agent)
export GPG_TTY=$(tty)

# pager setup
export PAGER="most -s"
export MANPAGER=$PAGER

# emacs as the core editor for all
export EDITOR="emacsclient -nw"

export LEIN_JVM_OPTS="-Xms1G -Xmx1G"

#export LD_LIBRARY_PATH=~/lib:$LD_LIBRARY_PATH

# force the 256 color on the terminal
export TERM=screen-256color

# scala setup in emacs - for installation of ensime, see https://github.com/ardumont/sh/blob/master/scala/deploy-ensime.sh
[ -d $HOME/applications/ensime ] && export ENSIME_ROOT=$HOME/applications/ensime
[ -d $HOME/applications/gradle ] && export GRADLE_HOME=$HOME/applications/gradle
[ -d $HOME/applications/scala/scala ] && export SCALA_HOME=$HOME/applications/scala/scala

export HISTIGNORE="pass:&"

export CHROME_BIN="/run/current-system/sw/bin/chromium-browser"

export ORGTRELLO_HOME="$HOME/repo/perso/org-trello"

export QUICKLISP_HOME="$HOME/quicklisp"
