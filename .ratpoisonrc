# removing border
set border 0
set padding 0 0 0 0
set barpadding 0 0

# Change the PATH so that i can switch easily between application window
ratpoison -c "setenv PATH ~/bin/:~/applications/eclipse/:~/applications/fritzing:$PATH"

##There are three different ways ratpoison can "name" frames.
##By title, name, or class. Title gets you gunk like "emacs@localhost.localdomain";
##but name and class give you the sensible "emacs" or "Emacs".
set winname class

# binding to call programs
bind x     exec ~/bin/runorraise gnome-terminal
bind b     exec ~/bin/runorraise chromium-browser
bind e     exec ~/bin/runorraise emacs
bind c     exec ~/bin/runorraise conkeror
bind f     exec ~/bin/runorraise firefox
bind comma exec ~/bin/runorraise gnome-control-center
bind dot   exec ~/bin/runorraise totem
bind slash exec ~/bin/runorraise transmission-gtk
bind i     exec ~/bin/runorraise eclipse
bind j     exec ~/bin/runorraise idea.sh
bind n     exec ~/bin/runorraise nautilus
bind y     exec ~/bin/runorraise yed.sh
bind T     exec stalonetray

bind C-f exec ~/bin/runorraise Fritzing
bind C-v exec ~/bin/runorraise virtualbox
bind C-c exec ~/bin/runorraise arduino
bind C-o exec ~/bin/runorraise eog
bind C-s exec ~/bin/runorraise gnome-screenshot
bind C-e exec ~/bin/runorraise evince
bind C-f exec ~/bin/runorraise firefox
bind C-b exec ~/bin/runorraise google-chrome

##aliasing keys within ratpoison
###make semicolon invoke ratpoison command, and colon shell command.
bind semicolon colon
bind colon exec
bind r restart

# switch between screens
#bind x nextscreen
bind z prevscreen

# start some programs by default
exec stalonetray &
exec gnome-settings-daemon &
exec gnome-power-manager &
exec nm-applet &
exec dropbox start &
exec nautilus --no-default-window &
exec gnome-terminal --hide-menubar -x tmux&
#exec gnome-panel &

